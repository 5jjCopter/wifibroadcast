sudo apt-get update

sudo apt-get install screen python-wxgtk2.8 python-matplotlib python-opencv python-pip python-numpy python-dev libxml2-dev libxslt-dev

sudo pip install pymavlink

sudo pip install mavproxy

sudo wget https://raw.githubusercontent.com/lurch/rpi-serial-console/master/rpi-serial-console -O /usr/bin/rpi-serial-console && sudo chmod +x /usr/bin/rpi-serial-console

rpi-serial-console disable

cd

sudo wget https://github.com/5jjCopter/wifibroadcast-mavproxy/archive/master.zip

sudo unzip master.zip

sudo rm master.zip

cd wifibroadcast-mavproxy-master

cp inicio-mavproxy /home/pi

cp instalacion-wifibroadcast /home/pi

cp inicio-mavproxy.service /lib/systemd/system

cd

sudo chmod 775 incio-mavproxy

sudo chmod 775 instalacion-wifibroadcast

sudo systemctl daemon-reload

sudo systemctl enable inicio-mavproxy

sudo ./instalacion-wifibroadcast


